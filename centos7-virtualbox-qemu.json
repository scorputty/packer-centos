{
  "variables": {
    "atlas_token": "{{env `ATLAS_TOKEN`}}",
    "atlas_build_slug": "{{env `ATLAS_BUILD_SLUG`}}",
    "atlas_changelog": "{{env `ATLAS_CHANGELOG`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "disk_size": 40960,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "iso_checksum_type": "sha256",
      "iso_urls": "http://mirror.1000mbps.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_os_type": "RedHat_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-7-x86_64",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--memory", "2048"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "2"
        ]
      ]
    },
    {
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "tcg",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_size": 40960,
      "format": "raw",
      "boot_wait": "5s",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_port": 22,
      "ssh_wait_timeout": "12800s",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "iso_checksum_type": "sha256",
      "iso_urls": "http://mirror.1000mbps.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "packer-centos-7-x86_64",
      "qemuargs": [
        [ "-m", "4096" ],
        [ "-smp", "2,sockets=2,cores=1,threads=1" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/main.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": false,
      "output": "builds/{{.Provider}}-centos-7.box"
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso", "qemu"],
      "token": "{{user `atlas_token`}}",
      "artifact": "{{user `atlas_build_slug`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": ["virtualbox", "libvirt"],
        "created_at": "{{timestamp}}",
        "description": "{{user `atlas_changelog`}}",
        "version": ""
      }
    }]
  ]
}
